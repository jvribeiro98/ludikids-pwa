generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  passHash  String
  role      String   @default("RESPONSAVEL")
  studentId String?
  createdAt DateTime @default(now())
}

model Notice {
  id         String   @id @default(cuid())
  title      String
  text       String
  image      String?
  approved   Boolean  @default(false)
  authorId   String?
  authorRole String?
  createdAt  DateTime @default(now())
}

model Event {
  id        String   @id @default(cuid())
  date      String
  title     String
  type      String
  createdAt DateTime @default(now())
}

model Task {
  id        String   @id @default(cuid())
  text      String
  dueDate   String?
  createdAt DateTime @default(now())
}

model MenuEntry {
  id        String   @id @default(cuid())
  period    String
  day       String
  dish      String
  image     String?
  createdAt DateTime @default(now())
}

model Payment {
  id     String  @id @default(cuid())
  kind   String
  amount Float
  date   String
  status String
  desc   String?
}

model BabyCare {
  id        String   @id @default(cuid())
  date      String
  studentId String
  icons     String // JSON array string
  obs       String?
  createdBy String?
  createdAt DateTime @default(now())
}
